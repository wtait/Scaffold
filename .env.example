# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/lovable_clone

# Storage Configuration
STORAGE_TYPE=local  # Options: local, s3
LOCAL_STORAGE_PATH=./projects

# S3 Storage Configuration (if using STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_ENDPOINT_URL=http://localhost:9000  # For MinIO local development
S3_BUCKET_NAME=lovable-clone-projects

# Sandbox Configuration
SANDBOX_TYPE=docker  # Options: docker (more options coming soon)

# LLM Provider API Keys (provide at least one)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=info